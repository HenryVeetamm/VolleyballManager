@model IEnumerable<App.DAL.DTO.PersonInMatch>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppUser)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Match)
            </th>
            <th>
                            @Html.DisplayNameFor(model => model.Match!.MatchDate)
                        </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPoints)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aces)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faults)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reception)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser!.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Match!.MatchScore)
            </td>
            <th>
                                        @Html.DisplayFor(modelItem => item.Match!.MatchDate)
                                    </th>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Aces)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faults)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reception)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
